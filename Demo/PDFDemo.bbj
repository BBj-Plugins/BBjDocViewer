use ::BBjDocViewer/BBjDocViewer.bbj::BBjDocViewer
? 'HIDE'

declare auto BBjTopLevelWindow wnd!

x=0
y=0
w=800
h=600

wnd! = BBjAPI().openSysGui("X0").addWindow(10,10,800,600,"BBj PDF Viewer Demo")
viewer! = new BBjDocViewer(wnd!,100,x,y,w,h)
wnd!        .setCallback(BBjAPI.ON_CLOSE,"byebye")
wnd!        .setCallback(BBjAPI.ON_RESIZE,"resize")

process_events

byebye:
bye

resize:
ev! = BBjAPI().getLastEvent()
w=ev!.getWidth()
h=ev!.getHeight()
return
